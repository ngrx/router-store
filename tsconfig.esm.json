{
  "version": "2.0.0",
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./release/esm",
    "target": "es5",
    "module": "es2015",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "moduleResolution": "node",
    "declaration": true,
    "lib": ["dom", "es5", "es2015"]
  },
  "include": [
    "src/**/*.ts"
  ],
  "angularCompilerOptions": {
    "genDir": ".ngc"
  }
}
